# =============================================================================
# Mukti Web - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# All NEXT_PUBLIC_* variables are exposed to the browser

# =============================================================================
# API Configuration
# =============================================================================
# Base URL for the Mukti API (required)
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# API request timeout in milliseconds (optional, default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Application Configuration
# =============================================================================
# Base URL of the application (optional, default: http://localhost:3001)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Application name (optional, default: Mukti)
NEXT_PUBLIC_APP_NAME=Mukti

# Application description (optional)
NEXT_PUBLIC_APP_DESCRIPTION=AI mentor that uses the Socratic method to guide you toward your own insights

# =============================================================================
# Authentication Configuration
# =============================================================================
# Access token expiration in seconds (optional, default: 900 = 15 minutes)
NEXT_PUBLIC_ACCESS_TOKEN_EXPIRY=900

# Refresh token expiration in seconds (optional, default: 604800 = 7 days)
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=604800

# Time before token expiry to trigger refresh in seconds (optional, default: 60)
NEXT_PUBLIC_TOKEN_REFRESH_BUFFER=60

# =============================================================================
# OAuth Configuration
# =============================================================================
# Google OAuth client ID (required for Google sign-in)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# OAuth redirect URI (required for OAuth)
NEXT_PUBLIC_OAUTH_REDIRECT_URI=

# =============================================================================
# Feature Flags
# =============================================================================
# Enable OAuth authentication (optional, default: true)
NEXT_PUBLIC_ENABLE_OAUTH=true

# Enable email verification (optional, default: true)
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true

# Enable analytics (optional, default: false in dev, true in prod)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (optional, default: true in dev, false in prod)
NEXT_PUBLIC_ENABLE_DEBUG=true

# =============================================================================
# Pagination Configuration
# =============================================================================
# Default page size for lists (optional, default: 20)
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20

# Maximum page size (optional, default: 100)
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# =============================================================================
# Cache Configuration (TanStack Query)
# =============================================================================
# Default stale time in milliseconds (optional, default: 60000 = 1 minute)
NEXT_PUBLIC_CACHE_STALE_TIME=60000

# Default cache time in milliseconds (optional, default: 300000 = 5 minutes)
NEXT_PUBLIC_CACHE_TIME=300000